<div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Your Orders</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <% if (orders?.length>0) { %>
                            <tr>
                                <th>Transaction</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                            <% } %>

                    </thead>
                    <tbody>
                        <% if (orders?.length>0) { %>

                            <% orders.forEach(order=> { %>
                                <tr>
                                    <td>#<%= order.transactionId %>
                                    </td>
                                    <td>
                                        <%= order.date %>
                                    </td>
                                    <td>
                                        <% if (order.status==='pending' ) { %>
                                            <span style="color:#FFA500">
                                                <%= order.status %>
                                            </span>
                                            <% } else if (order.status==='processing' ) { %>
                                                <span style="color:#0074D9;">
                                                    <%= order.status %>
                                                </span>
                                                <% } else if (order.status==='shipped' ) { %>
                                                    <span style="color:#FFF700;">
                                                        <%= order.status %>
                                                    </span>
                                                    <% } else if (order.status==='delivered' ) { %>
                                                        <span style="color:#008000;">
                                                            <%= order.status %>
                                                        </span>
                                                        <% } else { %>
                                                            <span style="color: #FF0000;">
                                                                <%= order.status %>
                                                            </span>
                                                            <% } %>
                                    </td>
                                    <td>&#8377;<%= order.total %> for <%= order.productCount %> items</td>

                                    <% if (order.status==='delivered' || order.status==='canceled' ) { %>
                                        <td><a href="#" class="d-block  btn-sm">View</a></td>
                                        <% } else { %>
                                            <td><a class="cancelBtn d-block btn btn-sm" 
                                                    onclick="cancelOrder('<%= order.id %>')"
                                                    style=" color: #ffffff;">cancel</a>
                                            </td>

                                            <% } %>

                                </tr>
                                <% }) %>


                                    <% } else { %>
                                        <tr>
                                            <td>
                                                There is no orders yet....
                                                <a href="/shop">shop now</a>
                                            </td>
                                        </tr>
                                        <% } %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script>


    function cancelOrder(orderId) {
        console.log(orderId);
        Swal.fire({
            title: 'Cancel your order!Are you sure?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                const url = '/order-cancel'
                fetch(url, {
                    method: 'POST',
                    body: JSON.stringify({ id: orderId }),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then((response) => {
                    console.log(response);
                    location.reload()
                }).catch(error => {
                    console.error(error);
                })
            }
        })

    }
</script>